<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <title>Lovers on Facebook</title>
  <link rel="shortcut icon" href="/favicon.ico">
  <link rel="stylesheet" href="<%= versioned_stylesheet("screen") %>">
  <script src="/javascripts/html5-ie.js"></script>
  <script src="/javascripts/jquery.min.js"></script>
  <% unless @class == "login" %>
    <link rel="stylesheet" href="/stylesheets/ui-lightness/jquery-ui.css">
    <script src="/javascripts/jquery-ui.min.js"></script>
  <% end %>
  <script src="<%= versioned_javascript("lovers") %>"></script>
</head>
<body<%= " class=\"#{@class}\"" if @class %>
  data-app_id="<%= Lovers.facebook.id %>"
  data-canvas_page="<%= Lovers.facebook.canvas_page %>">

  <header>
    <img alt="" src="<%= Lovers.host %>/images/lovers-heart-logo.jpg" width="50" height="50">
    <hgroup>
      <h1>Lovers</h1>
      <h2>Share the Love</h2>
    </hgroup>
  </header>

  <%= yield %>

  <footer>
    <p>Lovers Â© 2011</p>
    <ul>
      <%= '<li><a href="/fb/canvas/admin">Admin</a></li>' if @user && @user.admin? %>
      <li><a href="/fb/canvas/about">About</a></li>
      <li><a href="https://www.facebook.com/settings/?tab=applications" target="_top">Settings</a></li>
      <li><a href="/fb/canvas/privacy">Privacy</a></li>
    </ul>
  </footer>

  <div id="fb-root"></div>
  <script>
    window.fbAsyncInit = function() { Lovers.FBInit() };
    (function() {
      var e = document.createElement("script");
      e.src = document.location.protocol + "//connect.facebook.net/en_US/all.js";
      e.async = true;
      document.getElementById("fb-root").appendChild(e);
    }());

    // Google Analytics Tracking Code
    var _gaq = _gaq || [];
    _gaq.push(['_setAccount', 'UA-5668784-2']);
    _gaq.push(['_trackPageview']);

    (function() {
      var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
      ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
      var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
    })();
  </script>
</body>
</html>
